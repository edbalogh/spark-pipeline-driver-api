{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["id", "displayName"],
    "properties": {
        "id": {
            "type": "string",
            "unique": true
        },
        "displayName": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [ "Pipeline" ]
        },
        "params": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "name", "type" ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [ "text", "integer", "boolean", "script" ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "default": {
                        "type": "string"
                    }
                }
            }
        },
        "engineMeta": {
            "type": "object"
        }
    }
}
