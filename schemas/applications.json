{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["id", "name", "sparkConf", "stepPackages", "globals", "executions"],
    "id": {
        "type": "string"
    },
    "name": {
        "type": "string"
    },
    "sparkConf": {
        "type": "object",
        "properties": {
            "kryoClasses": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "setOptions": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": ["name", "value"],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "value": {
                            "type": "mixed"
                        }
                    }
                }
            }
        }
    },
    "stepPackages": {
        "type": "array",
        "items": {
            "type": "string"
        }
    },
    "globals": {
        "type": "array",
        "items": {
            "type": "object"
        }
    },
    "executions": {
        "type": "array",
        "items": {
            "type": "object",
            "required": ["id", "pipelines"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "parents": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "pipelines": {
                    "type": "array",
                    "items": {
                        "$ref": "../schemas/pipelines.json"
                    }
                }
            }
        }
    }
}
